<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uconn.werc_project_application.MainActivity"
    >

    <LinearLayout
        android:id="@+id/LinearLayout_main_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/EditText_Longitude"
                android:layout_width="419dp"
                android:layout_height="50dp"
                android:hint="Longitude" />

            <EditText
                android:id="@+id/EditText_Latitude"
                android:layout_width="419dp"
                android:layout_height="50dp"
                android:hint="Latitude"
                 />

        </LinearLayout>



        <Button
            android:id="@+id/Button_Send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save"
            android:layout_weight="4" />


    </LinearLayout>

    <TextView
        android:id="@+id/Textview_gps_test_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_main_top"
        android:textSize="30dp"
        android:text="Longitude"/>
    <TextView
        android:id="@+id/Textview_gps_test_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Textview_gps_test_longitude"
        android:textSize="30dp"
        android:text="Latitude"/>


    <Button
        android:id="@+id/button_gotomap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="Go to map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_ble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:text="Bluetooth"
        app:layout_constraintBottom_toTopOf="@+id/button_gotomap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_senddata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Dummy Data"
        app:layout_constraintBottom_toTopOf="@+id/button_ble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
